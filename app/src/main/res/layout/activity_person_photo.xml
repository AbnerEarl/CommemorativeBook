<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.frank.commemorativebook.PersonPhotoActivity">

    <Button
        android:id="@+id/p_all_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/editext_shape"
        android:text="全部"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/p_one_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/editext_shape"
        android:text="写真"
        app:layout_constraintStart_toEndOf="@+id/p_all_photo"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/p_collect_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/editext_shape"
        android:text="生活"
        app:layout_constraintStart_toEndOf="@+id/p_one_photo"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/p_other_photo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/editext_shape"
        android:text="其他"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/p_collect_photo"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_share"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonss_shape"
        android:text="分享"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_download"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonss_shape"
        android:text="下载"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_share" />

    <Button
        android:id="@+id/btn_communicate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonss_shape"
        android:text="联系作者"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_download" />

    <GridView
        android:id="@+id/gv_show_person_photo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:numColumns="auto_fit"
        android:columnWidth="100dp"
        android:stretchMode="columnWidth"
        app:layout_constraintBottom_toTopOf="@+id/btn_share"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/p_all_photo" />
</android.support.constraint.ConstraintLayout>
